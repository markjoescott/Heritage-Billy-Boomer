<div class="page-header">
  <h1>Essays</h1>
</div>

<p><a href="/essays/new" class="btn btn-primary">Add a New Essay</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Question 1</th>
      <th>Question 2</th>
      <th>Question 3</th>
      <th>Question 4</th>
      <th>Question 5</th>
      <th>Buyer</th>
      <th>Seller</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @essays.each do |essay| %>
      <tr>
        <td><%= essay.question_1 %></td>
        <td><%= essay.question_2 %></td>
        <td><%= essay.question_3 %></td>
        <td><%= essay.question_4 %></td>
        <td><%= essay.question_5 %></td>
        <td><%= essay.buyer_id %></td>
        <td><%= essay.seller_id %></td>
        <td>
          <a href="/essays/<%= essay.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/essays/<%= essay.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_essay/<%= essay.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

