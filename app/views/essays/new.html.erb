<div class="page-header">
  <h1>Short Essays</h1>
</div>

<% if @essay.errors.any? %>
  <% @essay.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_essay" class="form-horizontal">
  <!-- Label and input for question_1 -->
  <div class="form-group">
    <label for="question_1" class="col-sm-2 control-label">
      Why are you looking to buy/sell your business
    </label>
    <div class="col-sm-10">
      <textarea id="question_1" name="question_1" placeholder="Question 1" class="form-control" rows="3"><%= @essay.question_1 %></textarea>
    </div>
  </div>

  <!-- Label and input for question_2 -->
  <div class="form-group">
    <label for="question_2" class="col-sm-2 control-label">
      What is the most important thing that you learned from your business
    </label>
    <div class="col-sm-10">
      <textarea id="question_2" name="question_2" placeholder="Question 2" class="form-control" rows="3"><%= @essay.question_2 %></textarea>
    </div>
  </div>

  <!-- Label and input for question_3 -->
  <div class="form-group">
    <label for="question_3" class="col-sm-2 control-label">
      Describe the ideal successor
    </label>
    <div class="col-sm-10">
      <textarea id="question_3" name="question_3" placeholder="Question 3" class="form-control" rows="3"><%= @essay.question_3 %></textarea>
    </div>
  </div>

  <!-- Label and input for question_4 -->
  <div class="form-group">
    <label for="question_4" class="col-sm-2 control-label">
      What do you do to maintain a work life balance?
    </label>
    <div class="col-sm-10">
      <textarea id="question_4" name="question_4" placeholder="Question 4" class="form-control" rows="3"><%= @essay.question_4 %></textarea>
    </div>
  </div>

  <!-- Label and input for question_5 -->
  <div class="form-group">
    <label for="question_5" class="col-sm-2 control-label">
      One more question
    </label>
    <div class="col-sm-10">
      <textarea id="question_5" name="question_5" placeholder="Question 5" class="form-control" rows="3"><%= @essay.question_5 %></textarea>
    </div>
  </div>

  <!-- Label and input for buyer_id -->
  <div class="form-group">
    <label for="buyer_id" class="col-sm-2 control-label">
      Buyer
    </label>
    <div class="col-sm-10">
      <input type="text" id="buyer_id" name="buyer_id" placeholder="Buyer" class="form-control" value="<%= @essay.buyer_id %>">
    </div>
  </div>

  <!-- Label and input for seller_id -->
  <div class="form-group">
    <label for="seller_id" class="col-sm-2 control-label">
      Seller
    </label>
    <div class="col-sm-10">
      <input type="text" id="seller_id" name="seller_id" placeholder="Seller" class="form-control" value="<%= @essay.seller_id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Essay" class="btn btn-primary">
    </div>
  </div>
</form>
