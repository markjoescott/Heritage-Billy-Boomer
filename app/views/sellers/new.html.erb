      Birthdate
    </label>
    <div class="col-sm-10">
      <input type="text" id="seller_birthdate" name="seller_birthdate" placeholder="Seller birthdate" class="form-control" value="<%= @seller.seller_birthdate %>">
    </div>
  </div>

  <!-- Label and input for seller_level_of_education -->
  <div class="form-group">
    <label for="seller_level_of_education" class="col-sm-2 control-label">
      Level of education
    </label>
    <div class="col-sm-10">
      <input type="text" id="seller_level_of_education" name="seller_level_of_education" placeholder="Seller level of education" class="form-control" value="<%= @seller.seller_level_of_education %>">
    </div>
  </div>

  <!-- Label and input for seller_industry -->
  <div class="form-group">
    <label for="seller_industry" class="col-sm-2 control-label">
      Current industry
    </label>
    <div class="col-sm-10">
      <input type="text" id="seller_industry" name="seller_industry" placeholder="Seller industry" class="form-control" value="<%= @seller.seller_industry %>">
    </div>
  </div>

  <!-- Label and input for seller_marital_status -->
  <div class="form-group">
    <label for="seller_marital_status" class="col-sm-2 control-label">
      Marital status
    </label>
    <div class="col-sm-10">
      <input type="text" id="seller_marital_status" name="seller_marital_status" placeholder="Seller marital status" class="form-control" value="<%= @seller.seller_marital_status %>">
    </div>
  </div>

  <!-- Label and input for seller_children -->
  <div class="form-group">
    <label for="seller_children" class="col-sm-2 control-label">
      Number of children
    </label>
    <div class="col-sm-10">
      <input type="text" id="seller_children" name="seller_children" placeholder="Seller children" class="form-control" value="<%= @seller.seller_children %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create" class="btn btn-primary">
    </div>
  </div>
</form>
