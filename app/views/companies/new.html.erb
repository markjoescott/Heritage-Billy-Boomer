      <input type="text" id="company_EBITDA" name="company_EBITDA" placeholder="Company ebitda" class="form-control" value="<%= @company.company_EBITDA %>">
    </div>
  </div>

  <!-- Label and input for company_years_in_business -->
  <div class="form-group">
    <label for="company_years_in_business" class="col-sm-2 control-label">
      Company years in business
    </label>
    <div class="col-sm-10">
      <input type="text" id="company_years_in_business" name="company_years_in_business" placeholder="Company years in business" class="form-control" value="<%= @company.company_years_in_business %>">
    </div>
  </div>

  <!-- Label and input for seller_id -->
  <div class="form-group">
    <label for="seller_id" class="col-sm-2 control-label">
      Seller
    </label>
    <div class="col-sm-10">
      <input type="text" id="seller_id" name="seller_id" placeholder="Seller" class="form-control" value="<%= @company.seller_id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Company" class="btn btn-primary">
    </div>
  </div>
</form>
