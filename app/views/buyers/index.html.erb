<div class="page-header">
  <h1>Buyers</h1>
</div>

<p><a href="/buyers/new" class="btn btn-primary">Add a New Buyer</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image url</th>
      <th>Buyer</th>
      <th>Buyer username</th>
      <th>Buyer first name</th>
      <th>Buyer last name</th>
      <th>Buyer email</th>
      <th>Buyer net worth</th>
      <th>Buyer birthdate</th>
      <th>Buyer level of education</th>
      <th>Buyer preferred industry</th>
      <th>Buyer marital status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @buyers.each do |buyer| %>
      <tr>
        <td><%= buyer.image_url %></td>
        <td><%= buyer.buyer_id %></td>
        <td><%= buyer.buyer_username %></td>
        <td><%= buyer.buyer_first_name %></td>
        <td><%= buyer.buyer_last_name %></td>
        <td><%= buyer.buyer_email %></td>
        <td><%= buyer.buyer_net_worth %></td>
        <td><%= buyer.buyer_birthdate %></td>
        <td><%= buyer.buyer_level_of_education %></td>
        <td><%= buyer.buyer_preferred_industry %></td>
        <td><%= buyer.buyer_marital_status %></td>
        <td>
          <a href="/buyers/<%= buyer.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/buyers/<%= buyer.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_buyer/<%= buyer.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

