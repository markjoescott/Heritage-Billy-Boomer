<div class="page-header">
  <h1>Welcome Buyers!</h1>
  <h3>You've just taken the first step to owning your own business</h3>
  <h3>Please fill out the below form to create your profile</h3>
</div>

<% if @buyer.errors.any? %>
  <% @buyer.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_buyer" class="form-horizontal">
  <!-- Label and input for image_url -->
  <div class="form-group">
    <label for="image_url" class="col-sm-2 control-label">
      Image url
    </label>
    <div class="col-sm-10">
      <input type="text" id="image_url" name="image_url" placeholder="Image url" class="form-control" value="<%= @buyer.image_url %>">
    </div>
  </div>

  <!-- Label and input for buyer_id -->
  <div class="form-group">
    <label for="buyer_id" class="col-sm-2 control-label">
      Buyer ID
    </label>
    <div class="col-sm-10">
      <input type="hidden" id="buyer_id" name="buyer_id" placeholder="Buyer" class="form-control" value="<%= @buyer.buyer_id %>">
    </div>
  </div>

  <!-- Label and input for buyer_username -->
  <div class="form-group">
    <label for="buyer_username" class="col-sm-2 control-label">
      Create a username
    </label>
    <div class="col-sm-10">
      <input type="text" id="buyer_username" name="buyer_username" placeholder="Buyer username" class="form-control" value="<%= @buyer.buyer_username %>">
    </div>
  </div>

  <!-- Label and input for buyer_first_name -->
  <div class="form-group">
    <label for="buyer_first_name" class="col-sm-2 control-label">
      First name
    </label>
    <div class="col-sm-10">
      <input type="text" id="buyer_first_name" name="buyer_first_name" placeholder="Buyer first name" class="form-control" value="<%= @buyer.buyer_first_name %>">
    </div>
  </div>

  <!-- Label and input for buyer_last_name -->
  <div class="form-group">
    <label for="buyer_last_name" class="col-sm-2 control-label">
      Last name
    </label>
    <div class="col-sm-10">
      <input type="text" id="buyer_last_name" name="buyer_last_name" placeholder="Buyer last name" class="form-control" value="<%= @buyer.buyer_last_name %>">
    </div>
  </div>

  <!-- Label and input for buyer_email -->
  <div class="form-group">
    <label for="buyer_email" class="col-sm-2 control-label">
      Email
    </label>
    <div class="col-sm-10">
      <input type="text" id="buyer_email" name="buyer_email" placeholder="Buyer email" class="form-control" value="<%= @buyer.buyer_email %>">
    </div>
  </div>

  <!-- Label and input for buyer_net_worth -->
  <div class="form-group">
    <label for="buyer_net_worth" class="col-sm-2 control-label">
      Net worth
    </label>
    <div class="col-sm-10">
      <input type="text" id="buyer_net_worth" name="buyer_net_worth" placeholder="Buyer net worth" class="form-control" value="<%= @buyer.buyer_net_worth %>">
    </div>
  </div>

  <!-- Label and input for buyer_birthdate -->
  <div class="form-group">
    <label for="buyer_birthdate" class="col-sm-2 control-label">
      Birthdate
    </label>
    <div class="col-sm-10">
      <input type="text" id="buyer_birthdate" name="buyer_birthdate" placeholder="Buyer birthdate" class="form-control" value="<%= @buyer.buyer_birthdate %>">
    </div>
  </div>

  <!-- Label and input for buyer_level_of_education -->
  <div class="form-group">
    <label for="buyer_level_of_education" class="col-sm-2 control-label">
      Level of education
    </label>
    <div class="col-sm-10">
      <input type="text" id="buyer_level_of_education" name="buyer_level_of_education" placeholder="Buyer level of education" class="form-control" value="<%= @buyer.buyer_level_of_education %>">
    </div>
  </div>

  <!-- Label and input for buyer_preferred_industry -->
  <div class="form-group">
    <label for="buyer_preferred_industry" class="col-sm-2 control-label">
      Preferred industry to enter
    </label>
    <div class="col-sm-10">
      <input type="text" id="buyer_preferred_industry" name="buyer_preferred_industry" placeholder="Buyer preferred industry" class="form-control" value="<%= @buyer.buyer_preferred_industry %>">
    </div>
  </div>

  <!-- Label and input for buyer_marital_status -->
  <div class="form-group">
    <label for="buyer_marital_status" class="col-sm-2 control-label">
      Marital status
    </label>
    <div class="col-sm-10">
      <input type="text" id="buyer_marital_status" name="buyer_marital_status" placeholder="Buyer marital status" class="form-control" value="<%= @buyer.buyer_marital_status %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Buyer" class="btn btn-primary">
    </div>
  </div>
</form>
